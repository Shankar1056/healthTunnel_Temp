<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FormEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="singleLine">true</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/color_green</item>
        <item name="android:textColorHint">@color/color_green</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="FormTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="singleLine">true</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_green</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>